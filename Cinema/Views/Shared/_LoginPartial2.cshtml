@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers

@inject SignInManager<UsersDbo> SignInManager
@inject UserManager<UsersDbo> UserManager
 

@if (SignInManager.IsSignedIn(User))
      {
          <form asp-area="" asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm" class="navbar-right">
              <ul class="nav navbar-nav navbar-right">
                  <li>
                      <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"> @UserManager.GetUserName(User)!</a>
                  </li>
                  <li>
                      <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
                  </li>
              </ul>
          </form>
      }
      else
      {
          <ul class="nav navbar-nav navbar-right">
              <li><a asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>

          </ul>
      }
 